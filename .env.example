# Server Configuration
NODE_ENV=production
PORT=5000

# Security
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRATION=7d

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/correcte-ai
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password

# Redis
REDIS_URI=redis://redis:6379

# RabbitMQ
RABBITMQ_URI=amqp://rabbitmq:5672
RABBITMQ_USER=admin
RABBITMQ_PASS=change_this_password

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@correcte-ai.com
EMAIL_SECURE=false

# AI Service
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-4

# Admin UI Access
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=change_this_password

# Storage Paths
UPLOAD_PATH=./uploads
LOGS_PATH=./logs

# Frontend URL (for CORS and callbacks)
FRONTEND_URL=https://correcte-ai.com
